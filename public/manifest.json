{
    "manifest_version": 3,
    "name": "Tomato Cat Timer",
    "version": "0.1.0",
    "description": "Study and work companion cat plug-in based on tomato method.",
    "icons": {
        "128": "icon.svg"
    },
    "action": {
        "default_title": "Tomato Cat Timer",
        "default_icon": "icon.svg"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "sidePanel",
        "alarms",
        "notifications",
        "tabs"
    ],
    "host_permissions": []
}