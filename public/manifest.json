{
    "manifest_version": 3,
    "name": "Tomato Cat Timer",
    "version": "0.1.2",
    "description": "Study and work companion cat plug-in based on tomato method.",
    "icons": {
        "16": "16.png",
        "32": "32.png",
        "48": "48.png",
        "128": "128.png"
    },
    "action": {
        "default_title": "Tomato Cat Timer",
        "default_icon": {
            "16": "16.png",
            "32": "32.png",
            "48": "48.png",
            "128": "128.png"
        }
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "sidePanel",
        "alarms",
        "notifications"
    ],
    "host_permissions": []
}